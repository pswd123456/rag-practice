# ======================================================
# LLM API Keys (Model Providers)
# ======================================================
# 阿里云 DashScope (通义千问)
DASHSCOPE_API_KEY="sk-placeholder"

# ZenMux (Google Gemini 等)
ZENMUX_API_KEY="sk-ai-v1-placeholder"

# DeepSeek
DEEPSEEK_API_KEY="sk-placeholder"

# 默认使用的 LLM 模型名称 (e.g. qwen-max, deepseek-chat)
DEFAULT_LLM_MODEL="qwen-max"


# ======================================================
# Database (PostgreSQL)
# ======================================================
# 格式: postgresql+asyncpg://user:password@host:port/dbname
# 如果你在本地运行 Python 代码，host 通常是 localhost
# 如果在 Docker 内运行，Docker Compose 会自动覆盖为 db:5432
DATABASE_URL="postgresql+asyncpg://myuser:mypassword@localhost:5432/rag_db"


# ======================================================
# Retrieval (Elasticsearch)
# ======================================================
# 本地运行通常是 localhost:9200
ES_URL="http://localhost:9200"
ES_INDEX_PREFIX="rag_v1"
# 如果 ES 开启了 xpack 安全验证，请填写以下两项，否则留空
ES_USER=
ES_PASSWORD=
ES_TIMEOUT=30


# ======================================================
# Rerank Service (TEI)
# ======================================================
# 如果本地运行 Python，指向 Docker 映射的端口 (如 8003)
# 如果在 Docker 网络内部，指向 http://rerank-service:80
RERANK_BASE_URL="http://localhost:8003"
RERANK_MODEL_NAME="BAAI/bge-reranker-v2-m3"
RERANK_THRESHOLD=0.0


# ======================================================
# Object Storage (MinIO)
# ======================================================
# 对应 docker-compose 中的 MINIO_ROOT_USER/PASSWORD
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="rag-knowledge-base"
MINIO_SECURE=False


# ======================================================
# Caching & Queue (Redis)
# ======================================================
REDIS_HOST="localhost"
REDIS_PORT=6379


# ======================================================
# Observability (Langfuse)
# ======================================================
# 在 Langfuse 后台 -> Settings -> API Keys 获取
LANGFUSE_SECRET_KEY="sk-lf-placeholder"
LANGFUSE_PUBLIC_KEY="pk-lf-placeholder"
LANGFUSE_HOST="http://localhost:3001"

# Langfuse 自身的安全配置 (可选，视 Langfuse 部署方式而定)
LANGFUSE_NEXTAUTH_SECRET=
LANGFUSE_SALT=
LANGFUSE_ENCRYPTION_KEY=
LANGFUSE_S3_BUCKET="langfuse-events"


# ======================================================
# Network & Model Downloading
# ======================================================
# 使用 HF 镜像站加速模型下载 (国内推荐)
HF_ENDPOINT="https://hf-mirror.com"


# ======================================================
# Security (JWT)
# ======================================================
# 运行 `openssl rand -hex 32` 生成一个安全的密钥
SECRET_KEY="change_this_to_a_secure_random_string"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440